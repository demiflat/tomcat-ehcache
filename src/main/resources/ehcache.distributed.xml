<ehcache:config xmlns:ehcache="http://www.ehcache.org/v3"
    xmlns:jsr107="http://www.ehcache.org/v3/jsr107"
    xmlns:tc="http://www.ehcache.org/v3/clustered">
    <ehcache:service>
        <jsr107:defaults enable-management="true"
            enable-statistics="true"/>
        <tc:cluster>
            <tc:connection url="terracotta://localhost:9410/cachemanager"/>
            <tc:read-timeout unit="seconds">5</tc:read-timeout>
            <!-- <tc:server-side-ehcache:config client-mode="auto-create">
                <tc:shared-pool name="shared-pool" from="primary-server-resource" unit="MB">100</tc:shared-pool>
            </tc:server-side-ehcache:config> -->
        </tc:cluster>
    </ehcache:service>

    <ehcache:cache alias="orbeon">
        <ehcache:key-type>java.lang.String</ehcache:key-type>
        <ehcache:value-type>java.io.Serializable</ehcache:value-type>
        <ehcache:heap unit="entries">200</ehcache:heap>
        <!-- <resources>
            <tc:clustered-dedicated from="primary-server-resource" unit="MB">33</tc:clustered-dedicated>
        </resources> -->
        <tc:clustered-store consistency="strong"/>
    </ehcache:cache>

</ehcache:config>